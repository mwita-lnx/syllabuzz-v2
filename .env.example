# =============================================================================
# SyllaBuzz Environment Configuration
# =============================================================================
# Copy this file to .env and update the values for your environment

# Database Configuration
MONGO_URI=mongodb://localhost:27017/syllabuzz
MONGO_DB=syllabuzz

# JWT Configuration - IMPORTANT: Change these in production!
JWT_SECRET=your_super_secure_jwt_secret_key_change_in_production
JWT_SECRET_KEY=your_super_secure_jwt_secret_key_change_in_production
REFRESH_SECRET_KEY=your_super_secure_refresh_secret_key_change_in_production

# Server Configuration
NODE_ENV=development
PORT=3000
FLASK_DEBUG=True

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Vector Database (Qdrant)
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_URL=http://localhost:6333

# Redis Configuration (for caching and rate limiting)
REDIS_URL=redis://localhost:6379/0

# File Upload Configuration
UPLOAD_FOLDER=uploads
MAX_FILE_SIZE=50MB

# Email Configuration (for password reset)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_DEFAULT_SENDER=noreply@syllabuzz.com

# Frontend Configuration
VITE_SERVER_URL=http://localhost:5000/api
VITE_BACKEND_URL=http://localhost:3000
VITE_SERVER_BASE_URL=http://localhost:5000

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_HOUR=100
RATE_LIMIT_LOGIN_ATTEMPTS=5

# Security
SESSION_COOKIE_SECURE=False
REMEMBER_COOKIE_SECURE=False
PASSWORD_MIN_LENGTH=8